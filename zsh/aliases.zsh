# ls
alias ls='ls -G'
alias la='ls -a'
alias ll='ls -lh'

# screen
alias scS='screen -S'
alias scr='screen -r'
alias scl='screen -ls'

# wide_grep
alias widegrep='grep -A 10 -B 10'

# shorter navigation aliases
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# git
alias gl='git log'
alias ga='git add'
alias gd='git diff'
alias gs='git status'
alias gc='git commit'
alias gco='git checkout'
alias gf='git fetch'
alias gfo='git fetch origin'
alias gps='git push'
alias gpso='git push origin'
alias gpl='git pull'
alias gplo='git pull origin'

# hard to remember command
alias untar='tar -zxvf'
